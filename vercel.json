{
  "version": 2,
  "buildCommand": "npm run build",
  "functions": {
    "api/[...path].ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api" },
    { "source": "/:path*", "destination": "/dist/public/:path*" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...path].ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/dist/public/index.html" }
  ]
}
